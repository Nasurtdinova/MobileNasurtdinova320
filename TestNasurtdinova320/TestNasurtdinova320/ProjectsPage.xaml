<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestNasurtdinova320.ProjectsPage" NavigationPage.HasBackButton="False">
    <NavigationPage.TitleView>
        <StackLayout Padding="0,0,20,0" Orientation="Horizontal">
            <Label Text="Проекты" FontSize="Large"  HorizontalOptions="CenterAndExpand" TextColor="White" ></Label>
            <Label
                FontFamily="Font"
                FontSize="Title"
                Text="&#xe145;"
                HorizontalOptions="EndAndExpand"
                TextColor="White">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </NavigationPage.TitleView>
    <ScrollView>
        <StackLayout>
            <ListView x:Name="projectsList" SeparatorColor="Black" ItemsSource="{Binding}"  ItemSelected="projectsList_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <Label Padding="10" Text="{Binding Name}" TextColor="Black" FontSize="Medium" />
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
   
</ContentPage>