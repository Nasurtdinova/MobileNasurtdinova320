<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestNasurtdinova320.MainPage">

    <StackLayout>

        <StackLayout>
            <Image Source="image.jpg" Margin="30"/>
            <StackLayout Margin="40,0,40,30">
                <Label Text="Логин"  TextColor="black"></Label>
                <Frame
                    Padding="0"
                    BorderColor="Black">
                    <Entry x:Name="loginEntry" />
                </Frame>
            </StackLayout>
            <StackLayout Margin="40,0,40,30">
                <Label Text="Пароль" TextColor="black"></Label>
                <Frame
                    Padding="0"
                    BorderColor="Black">
                    <Entry x:Name="passwordEntry" IsPassword ="True" />
                </Frame>
            </StackLayout>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Зарегистрироваться" Clicked="Button_Registr_Clicked"></Button>
            <Button Text="Войти" Clicked="Button_Login_Clicked"></Button>
        </StackLayout>

    </StackLayout>

</ContentPage>
