<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestNasurtdinova320.Contacts"
             Title="Контакты">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="40,30,40,30">
                <Label Text="Телефон" TextColor="black"></Label>
                <Frame
                    Padding="0"
                    BorderColor="Black" BackgroundColor="#CBCBCB">
                    <Label Text="{Binding Phone}" />
                </Frame>
            </StackLayout>

            <StackLayout Margin="40,0,40,30">
                <Label Text="Телефон" TextColor="black"></Label>
                <Frame
                    Padding="0" BackgroundColor="#CBCBCB"
                    BorderColor="Black">
                    <Label Text="{Binding Phone}" />
                </Frame>
            </StackLayout>

            <StackLayout Margin="40,0,40,30">
                <Label Text="Email" TextColor="black"></Label>
                <Frame
                    Padding="0" BackgroundColor="#CBCBCB"
                    BorderColor="Black">
                    <Label Text="{Binding Email}" />
                </Frame>
            </StackLayout>

            <StackLayout Margin="40,0,40,30">
                <Label Text="Адрес" TextColor="black"></Label>
                <Frame
                    Padding="0" BackgroundColor="#CBCBCB"
                    BorderColor="Black">
                    <Label Text="{Binding Address}" />
                </Frame>
            </StackLayout>
          
        </StackLayout>
    </ContentPage.Content>
</ContentPage>