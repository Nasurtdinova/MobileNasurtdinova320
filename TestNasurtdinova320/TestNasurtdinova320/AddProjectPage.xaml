<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestNasurtdinova320.AddProjectPage">
    <NavigationPage.TitleView>
        <Label Text="Добавить проект" FontSize="Large" TextColor="White" Margin="30,0"></Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="20" Spacing="10">
                <Entry Text="{Binding Name}" Placeholder="Имя проекта"/>
                <Editor Text="{Binding Description}" Placeholder="Описание проекта" HeightRequest="200"/>
                <Entry Text="{Binding Email}" Placeholder="Email"/>
                <Entry Text="{Binding Phone}" Placeholder="Телефон"/>
                <Entry Text="{Binding Address}" Placeholder="Адрес"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" >
                <Button Text="Сохранить" Clicked="SaveProject" />
                <Button Text="Отмена" Clicked="Cancel" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>