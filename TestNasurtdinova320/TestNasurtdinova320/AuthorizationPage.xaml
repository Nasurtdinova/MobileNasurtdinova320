<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestNasurtdinova320.MainPage" NavigationPage.HasNavigationBar="False">
    <StackLayout VerticalOptions="Center">
        <Image Source="image.jpg"/>
        <StackLayout Margin="40" Spacing="30" >
            <StackLayout>
                <Label Text="Логин"  TextColor="black"></Label>
                <Frame>
                    <Entry x:Name="loginEntry" />
                </Frame>
            </StackLayout>
            <StackLayout>
            <Label Text="Пароль" TextColor="black"></Label>
                <Frame>
                    <Entry x:Name="passwordEntry" IsPassword ="True" />
                </Frame>
            </StackLayout>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Зарегистрироваться" Clicked="Button_Registr_Clicked"></Button>
            <Button Text="Войти" Clicked="Button_Login_Clicked"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
