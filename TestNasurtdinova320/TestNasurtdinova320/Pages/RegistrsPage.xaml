<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestNasurtdinova320.RegistrsPage" Visual="Material">
    <NavigationPage.TitleView>
        <Label Text="Регистрация" FontSize="Large" TextColor="White" Margin="50,0"></Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="40">
            <StackLayout  Spacing="40">
                <Entry x:Name="loginEntry" Placeholder="Логин"/>
                <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
                <Entry x:Name="passwordEntry" IsPassword ="True" Placeholder="Пароль"/>
                <Entry x:Name="password2Entry" IsPassword ="True" Placeholder="Пароль"/>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Зарегистрироваться" Clicked="btn_Register"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>