<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestNasurtdinova320.RegistrsPage">
    <NavigationPage.TitleView>
        <Label Text="Регистрация" FontSize="Large" TextColor="White" Margin="50,0"></Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="40" Spacing="40">
                <Entry x:Name="emailEntry" Placeholder="Email"/>
                <Entry x:Name="loginEntry" Placeholder="Login"/>
                <Entry x:Name="passwordEntry" IsPassword ="True" Placeholder="Password"/>
                <Entry x:Name="password2Entry" IsPassword ="True" Placeholder="Password"/>
            </StackLayout>
            <StackLayout  HorizontalOptions="Center">
                <Button Text="Зарегистрироваться" Clicked="btn_Register"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>